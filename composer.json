{
    "name": "hexacuant/ngw",
    "description": "GenWeb Next Generation - Refactored and improved version",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ngw\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ngw\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=5",
        "phpcs": "phpcs --standard=PSR12 src templates",
        "fix-style": "phpcbf --standard=PSR12 src templates"
    }
}
