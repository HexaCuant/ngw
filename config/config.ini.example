; Configuration file for GenWeb NG
; Copy this to config.ini and customize

[database]
; SQLite (default and recommended)
DB_DRIVER=sqlite
DB_PATH=../data/ngw.db

; PostgreSQL (legacy, for migration only)
;DB_DRIVER=pgsql
;DB_HOST=localhost
;DB_PORT=5432
;DB_NAME=genweb
;DB_USER=genweb
;DB_PASSWORD=genweb

[app]
APP_ENV=development
APP_DEBUG=true
APP_NAME=GenWeb NG

[paths]
PROJECTS_PATH=/var/www/proyectosNGengine
GENGINE_SCRIPT=/usr/local/bin/ngen2web

[admin]
; Default admin username (created during init)
ADMIN_USERNAME=admin
